<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="2dp"
    android:paddingEnd="2dp"
    >

    <View
        android:id="@+id/profile_status_container"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <include
        android:id="@+id/profile_status_thumbnail"
        layout="@layout/rounded_image_container"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="@id/profile_status_container"
        app:layout_constraintStart_toStartOf="@id/profile_status_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/profile_status_container"
        />

    <ImageView
        android:id="@+id/myStatusAddIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:elevation="5dp"
        android:src="@drawable/ic_add_circle_white_24dp"
        android:tint="#4D6EDC"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/profile_status_container"
        app:layout_constraintEnd_toEndOf="@id/profile_status_container" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:elevation="4dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/myStatusAddIcon"
        app:layout_constraintStart_toStartOf="@id/myStatusAddIcon"
        app:layout_constraintEnd_toEndOf="@id/myStatusAddIcon"
        app:layout_constraintBottom_toBottomOf="@id/myStatusAddIcon" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hrudhay kanth"
        android:textSize="12sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/profile_status_container"
        app:layout_constraintStart_toStartOf="@id/profile_status_container"
        app:layout_constraintTop_toBottomOf="@id/profile_status_container" />

</androidx.constraintlayout.widget.ConstraintLayout>